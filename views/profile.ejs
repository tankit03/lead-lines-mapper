<%- include('partials/header') %>

<div class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-4xl">
        <!-- Profile Header -->
        <div class="mb-8">
            <h1 class="text-2xl font-bold text-gray-900">
                Update Account Information
            </h1>
        </div>

        <!-- Success/Error Messages -->
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                <p class="text-green-800 font-medium"><%= success %></p>
            </div>
        <% } %>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                <p class="text-red-800 font-medium"><%= error %></p>
            </div>
        <% } %>

        <!-- Profile Card -->
        <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
            <!-- Profile Information Rows -->
            <div class="divide-y divide-gray-200">
                <!-- Email Row -->
                <div class="flex items-center justify-between px-6 py-4">
                    <div class="text-gray-700">
                        <span class="font-medium">Email:</span> <%= email %>
                    </div>
                    <button onclick="toggleEmailForm()" class="control-btn primary">
                        üìß Change
                    </button>
                </div>
                
                <!-- Email Form (Hidden by default) -->
                <div id="email-form" class="hidden px-6 py-4 bg-gray-50 border-t">
                    <form id="email-update-form" class="flex gap-4 items-end">
                        <div class="flex-1">
                            <label for="new-email" class="block text-sm font-medium text-gray-700 mb-1">New Email</label>
                            <input type="email" id="new-email" name="email" required 
                                   class="w-full px-3 py-2 border border-gray-300 rounded focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
                                   placeholder="Enter new email">
                        </div>
                        <button type="submit" class="control-btn primary">üíæ Save</button>
                        <button type="button" onclick="toggleEmailForm()" class="control-btn secondary">‚ùå Cancel</button>
                    </form>
                </div>

                <!-- Username Row -->
                <div class="flex items-center justify-between px-6 py-4">
                    <div class="text-gray-700">
                        <span class="font-medium">Username:</span> <%= username %>
                    </div>
                    <button onclick="toggleUsernameForm()" class="control-btn primary">
                        üë§ Change
                    </button>
                </div>
                
                <!-- Username Form (Hidden by default) -->
                <div id="username-form" class="hidden px-6 py-4 bg-gray-50 border-t">
                    <form id="username-update-form" class="flex gap-4 items-end">
                        <div class="flex-1">
                            <label for="new-username" class="block text-sm font-medium text-gray-700 mb-1">New Username</label>
                            <input type="text" id="new-username" name="username" required minlength="3" maxlength="20"
                                   class="w-full px-3 py-2 border border-gray-300 rounded focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
                                   placeholder="Enter new username">
                        </div>
                        <button type="submit" class="control-btn primary">üíæ Save</button>
                        <button type="button" onclick="toggleUsernameForm()" class="control-btn secondary">‚ùå Cancel</button>
                    </form>
                </div>

                <!-- Password Row -->
                <div class="flex items-center justify-between px-6 py-4">
                    <div class="text-gray-700">
                        <span class="font-medium">Password:</span> ********
                    </div>
                    <button onclick="togglePasswordForm()" class="control-btn primary">
                        üîí Change
                    </button>
                </div>
                
                <!-- Password Form (Hidden by default) -->
                <div id="password-form" class="hidden px-6 py-4 bg-gray-50 border-t">
                    <form id="password-update-form" class="space-y-4">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div>
                                <label for="current-password" class="block text-sm font-medium text-gray-700 mb-1">Current Password</label>
                                <input type="password" id="current-password" name="currentPassword" required
                                       class="w-full px-3 py-2 border border-gray-300 rounded focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
                                       placeholder="Current password">
                            </div>
                            <div>
                                <label for="new-password" class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
                                <input type="password" id="new-password" name="newPassword" required minlength="6"
                                       class="w-full px-3 py-2 border border-gray-300 rounded focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
                                       placeholder="New password">
                            </div>
                            <div>
                                <label for="confirm-password" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
                                <input type="password" id="confirm-password" name="confirmPassword" required minlength="6"
                                       class="w-full px-3 py-2 border border-gray-300 rounded focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
                                       placeholder="Confirm password">
                            </div>
                        </div>
                        <div class="flex gap-4">
                            <button type="submit" class="control-btn primary">üíæ Save</button>
                            <button type="button" onclick="togglePasswordForm()" class="control-btn secondary">‚ùå Cancel</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Delete Account Section -->
            <div class="px-6 py-6 bg-red-50 border-t border-red-200">
                                <div class="space-y-4">
                    <!-- Map Data Management Buttons -->
                    <div class="pb-4 border-b border-red-300">
                        <h3 class="text-lg font-medium text-red-800 mb-3">Map Data Management</h3>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                            <!-- Delete Waypoints Button -->
                            <div class="text-center">
                                <button onclick="confirmDeleteWaypoints()" class="control-btn danger w-full">
                                    üìç Delete All Waypoints
                                </button>
                                <p class="text-xs text-red-600 mt-1">Remove all markers</p>
                            </div>
                            
                            <!-- Delete Paths Button -->
                            <div class="text-center">
                                <button onclick="confirmDeletePaths()" class="control-btn danger w-full">
                                    üõ§Ô∏è Delete All Paths
                                </button>
                                <p class="text-xs text-red-600 mt-1">Remove all drawn paths</p>
                            </div>
                            
                            <!-- Clear All Button -->
                            <div class="text-center">
                                <button onclick="confirmClearAll()" class="control-btn danger w-full">
                                    üóëÔ∏è Clear All Data
                                </button>
                                <p class="text-xs text-red-600 mt-1">Remove everything</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Delete Account Button -->
                    <div>
                        <h3 class="text-lg font-medium text-red-800 mb-3">Account Management</h3>
                        <button onclick="confirmDeleteAccount()" class="control-btn danger">
                            üóëÔ∏è Delete User Account
                        </button>
                        <p class="text-sm text-red-600 mt-2">This action is permanent and cannot be undone.</p>
                    </div>
            </div>
        </div>
    </div>
</div>


<style>
/* Additional button style for secondary variant */
.control-btn.secondary {
    border-color: #d1d5db;
    background: rgba(243, 244, 246, 0.95);
    color: #6b7280;
}

.control-btn.secondary:hover {
    background: rgba(229, 231, 235, 0.95);
    border-color: #9ca3af;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(107, 114, 128, 0.2);
}
</style>

<script src="/js/profile.js"></script>



<%- include('partials/footer') %>