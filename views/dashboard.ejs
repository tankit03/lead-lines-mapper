<%- include('partials/header') %>

<div class="relative h-screen w-full"> 
    <div id="map" class="absolute inset-0"></div>
    
    <div class="floating-controls">
        <div class="controls-content">
            <div class="search-section">
                <h3 class="section-title">Search Location</h3>
                <input
                    id="pac-input"
                    class="search-input"
                    type="text"
                    placeholder="Search for a location"
                />
            </div>
            
            <div class="controls-section">
                <h3 class="section-title">Map Tools</h3>
                <div class="control-buttons">
                    <button id="add-marker-btn" class="control-btn primary">
                        📍 Add Marker
                    </button>
                    <button id="draw-path-btn" class="control-btn primary">
                        🛤️ Draw Path
                    </button>
                    <button id="delete-waypoint-btn" class="control-btn danger">
                        🗑️ Delete Items
                    </button>
                    <button id="clear-map-btn" class="control-btn danger">
                        🗑️ Delete All
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.dashboardConfig = {
        userId: "<%= session.userId %>",
        username: "<%= session.username %>",
        googleMapsApiKey: "<%= googleMapsApiKey %>"
